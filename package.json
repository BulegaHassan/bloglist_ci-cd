{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "install-client": "cd client && npm install",
    "setup-production": "npm run install-client && npm run build-client && npm install",
    "dev": "cross-env NODE_ENV=development nodemon index.js --ignore client",
    "server": "cross-env NODE_ENV=production node index.js --ignore client",
    "client": " cd client && npm start ",
    "build-client": "cd client && npm run build",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \" npm run client\"",
    "eslint": "eslint \"./**/*.{js,jsx}\"",
    "lint": "eslint --fix --ext .js,.jsx .",
    "eslint:client": " cd client && npm run eslint",
    "lint:client": "cd client && npm run lint ",
    "test": "cross-env NODE_ENV=test jest   --verbose --runInBand --forceExit --detectOpenHandles",
    "start:test": "cross-env NODE_ENV=test node index.js ",
    "test:backend": "concurrently --kill-others-on-fail \"npm run start:test\" \" npm run test\""
  },
  "author": "Hassan Bulega",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "dotenv": "^14.3.0",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "jest": "^27.4.7",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.1.8"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "client"
    ]
  }
}
